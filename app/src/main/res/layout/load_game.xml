<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- List of saved games -->
    <ListView
        android:id="@+id/fileListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loadGameDialogButtons"
        android:cacheColorHint="@color/transparentColor"
        style="@style/FillParent" />

    <!-- Bottom buttons (full-width, centered content) -->
    <LinearLayout
        android:id="@+id/loadGameDialogButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        style="@style/WrapContent">

        <Button
            android:id="@+id/loadGameDialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/menuLoadLabel"
            style="@style/WrapContent" />

    </LinearLayout>

</RelativeLayout>
