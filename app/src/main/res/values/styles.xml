<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:windowBackground">@android:color/black</item>
        -->
	</style>
	<style name="FillParent">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="WrapContent">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="TextDialogEntry" parent="@style/WrapContent">
		<item name="android:textAppearance">
			@android:style/TextAppearance.Theme.Dialog
		</item>
	</style>
	<style name="SpinnerDialogEntry" parent="@style/WrapContent">
    <item name="android:choiceMode">singleChoice</item>
    <item name="android:background">@drawable/spinner_background</item>
    <item name="android:textColor">?android:textColorPrimary</item> <!-- Theme-aware text -->
    <item name="android:padding">8dp</item>
	</style>
	<style name="TableLayoutTextBase" parent="@style/WrapContent">
		<item name="android:padding">0px</item>
		<item name="android:layout_margin">0px</item>
		<item name="android:textColor">@color/textColor</item>
		<item name="android:shadowColor">#66000000</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">6</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
		<item name="android:scrollHorizontally">false</item>
	</style>
	<style name="TableLayoutText" parent="@style/TableLayoutTextBase">
		<!--
		<item name="android:textAppearance">
			@android:style/TextAppearance.Medium
		</item>
		-->
	</style>
	<style name="TableLayoutTextCentered" parent="@style/TableLayoutText">
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="MenuButton" parent="@style/WrapContent">
		<!--
		<item name="android:layout_alignParentRight">true</item>
		-->
		<item name="android:padding">0px</item>
		<item name="android:layout_margin">0px</item>
		<item name="android:src">
			@drawable/ic_menu_moreoverflow_normal_holo_light</item>
	</style>
</resources>
